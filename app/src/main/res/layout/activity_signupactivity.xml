<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgforhome"
    android:orientation="vertical"
    tools:context=".signupactivity">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="52dp"
        android:src="@drawable/jlogo"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="140dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="155dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_edittext"
        android:padding="10dp"
        android:layout_marginTop="20sp"
        android:paddingHorizontal="10dp"
        android:hint="  Email"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/baseline_email_24"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="237dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:padding="10dp"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="20dp"
        android:drawableLeft="@drawable/baseline_security_24"
        android:hint=" password"
        android:textColor="@color/white"
        android:layout_marginTop="20sp"
        app:layout_editor_absoluteX="42dp"
        app:layout_editor_absoluteY="300dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fogetPasword?"
        android:layout_marginLeft="200dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="249dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bgbutton"
        android:padding="10dp"
        android:id="@+id/btnLogin"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="10sp"
        android:text="Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_editor_absoluteY="42dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="393dp" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do You  Have an Account?"
        android:textColor="@color/black"
        android:textSize="10sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="465dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:textColor="@color/red"
        android:textSize="15sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="459dp" />

</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">

      <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bgbutton"
        android:drawableLeft="@drawable/facebook"
        android:paddingLeft="20dp"
          android:layout_marginLeft="30dp"
          android:text="FACEBOOK"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="501dp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bgbutton"
        android:drawableLeft="@drawable/g1"
        android:paddingLeft="20dp"
        android:layout_marginLeft="20dp"
        android:text="Google"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="501dp" />


</LinearLayout>

</LinearLayout>